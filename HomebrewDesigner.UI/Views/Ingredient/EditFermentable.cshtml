@model HomebrewDesigner.Core.DTO.FermentableUpdateRequest
@{
    ViewBag.Title = "Edit Fermentables";
}
<body>
<div class="container text-center mt-5 bg-secondary rounded-5 pe-5 pt-3">
    <h1 class="display-2 pb-3 text-main">Edit Fermentable</h1>
    <form asp-controller="Ingredient" asp-action="EditFermentable" method="post" class="pt-3" id="form">
        <div class="mb-3 d-flex visually-hidden">
            <div class="col-3">
                <label asp-for="Id" class="form-label">
                    <h5>Id:</h5>
                </label>
            </div>
            <div class="col-9">
                <input class="w-100 form-control" asp-for="Id">
            </div>
        </div>
        <div class="mb-3 d-flex">
            <div class="col-3">
                <label asp-for="Name" class="form-label text-main">
                    <h5>Name:</h5>
                </label>
            </div>
            <div class="col-9">
                <input class="w-100 form-control bg-secondary text-main" asp-for="Name">
                <span class="text-validation" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="mb-3 d-flex ">
            <div class="col-3">
                <label asp-for="Type" class="form-label text-main">
                    <h5>Type:</h5>
                </label>
            </div>
            <div class="col-9">
                <select class="form-select w-100 bg-secondary text-main" asp-for="Type">
                    @foreach (var type in ViewBag.Types)
                    {
                        if (type == Model.Type.ToString())
                        {
                            <option selected value="@type">@type</option>
                        }
                        else
                        {
                            <option value="@type">@type</option>
                        }
                    }
                </select>
                <span class="text-validation" asp-validation-for="Type"></span>
            </div>
        </div>
        <div class="mb-3 d-flex">
            <div class="col-3">
                <label asp-for="Origin" class="form-label text-main">
                    <h5>Origin:</h5>
                </label>
            </div>
            <div class="col-9">
                <select class="form-select w-100 bg-secondary text-main" asp-for="Origin">
                    <option selected disabled="disabled">Select Origin</option>
                    @foreach (var origin in ViewBag.Origins)
                    {
                        if (origin == Model.Origin.ToString())
                        {
                            <option selected value="@origin">@origin</option>
                        }
                        else
                        {
                            <option value="@origin">@origin</option>
                        }
                    }
                </select>
                <span asp-validation-for="Origin" class="text-validation"></span>
            </div>
        </div>
        <div class="mb-3 d-flex">
            <div class="col-3">
                <label asp-for="Color" class="form-label text-main">
                    <h5>Color:</h5>
                </label>
            </div>
            <div class="col-9">
                <input class="w-100 form-control bg-secondary text-main" asp-for="Color">
                <span class="text-validation" asp-validation-for="Color"></span>
            </div>
        </div>
        <div class="mb-3 d-flex">
            <div class="col-3">
                <label asp-for="PotentialGravity" class="form-label text-main">
                    <h5>Potential Gravity:</h5>
                </label>
            </div>
            <div class="col-9">
                <input class="w-100 form-control bg-secondary text-main" asp-for="PotentialGravity">
                <span class="text-validation" asp-validation-for="PotentialGravity"></span>
            </div>
        </div>
        <div class="mb-3 d-flex">
            <div class="col-3">
                <label asp-for="MaxInBatch" class="form-label text-main">
                    <h5>Max in Batch:</h5>
                </label>
            </div>
            <div class="col-9">
                <input class="w-100 form-control bg-secondary text-main" asp-for="MaxInBatch">
                <span class="text-validation" asp-validation-for="MaxInBatch"></span>
            </div>
        </div>
        <div id="loader" class="visually-hidden mt-3">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
        <div class="text-center mt-5 pb-5" id="buttonDiv">
            <button type="submit" class="btn btn-main text-green">Update Fermentable</button>
        </div>
    </form>
</div>
</body>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}