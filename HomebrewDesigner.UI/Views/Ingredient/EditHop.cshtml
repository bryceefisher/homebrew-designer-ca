@model HomebrewDesigner.Core.DTO.HopUpdateRequest
@{
    ViewBag.Title = "Edit Hop";
}
<body>
<div class="container text-center mt-5">
    <form asp-controller="Ingredient" asp-action="EditHop" method="post">
        <div class="mb-3 d-flex visually-hidden">
            <div class="col-3">
                <label asp-for="Id" class="form-label">
                    <h5>Id:</h5>
                </label>
            </div>
            <div class="col-9">
                <input class="w-100 form-control" asp-for="Id">
            </div>
        </div>
        <div class="mb-3 d-flex">
            <div class="col-3">
                <label asp-for="Name" class="form-label">
                    <h5>Name:</h5>
                </label>
            </div>
            <div class="col-9">
                <input class="w-100 form-control" asp-for="Name" required>
            </div>
        </div>
        <div class="mb-3 d-flex">
            <div class="col-3">
                <label asp-for="AlphaAcid" class="form-label">
                    <h5>Alpha Acid:</h5>
                </label>
            </div>
            <div class="col-9">
                <input class="w-100 form-control" asp-for="AlphaAcid" required>
            </div>
        </div>
        <div class="text-center mt-5">
            <button type="submit" class="btn btn-success">Update Hop</button>

        </div>
    </form>
</div>
</body>