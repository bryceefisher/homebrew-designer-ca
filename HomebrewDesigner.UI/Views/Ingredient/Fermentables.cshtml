@model IEnumerable<HomebrewDesigner.Core.DTO.FermentableResponse>

@{
    ViewBag.Title = "Fermentables";
}

<div class="container mt-5 text-center">
    <h1 class="display-4 text-decoration-underline">Ingredients: Fermentables</h1>
    <div class="container border border-2 p-2 mt-4 rounded-2">
        <h1 class="display-6">Search Fields</h1>
        <form asp-action="Fermentables" asp-controller="Ingredient" method="get">
            <div class="mb-1">
                <label for="fermentablesSelect" class="form-label">Search Text:</label>
                <select class="form-select" id="fermentablesSelect" aria-label="Fermentables Search Fields" name="searchBy">
                    <option selected disabled>Property</option>
                    @foreach (KeyValuePair<string, string> item in ViewBag.SearchFields)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="searchString" class="form-label">Search String:</label>
                <input type="text" class="form-control" id="searchString" name="searchString" placeholder="Search String">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
            <a class="text-white text-decoration-none btn btn-danger" asp-controller="Ingredient" asp-action="Fermentables">Clear</a>
        </form>
    </div>
    <div class="border border-2 p-5 rounded-2 mt-2">
        <h1 class="display-6">Fermentables</h1>
        <table class="table table-striped overflow-scroll">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Origin</th>
                <th scope="col">Color</th>
                <th scope="col">Potential Gravity</th>
                <th scope="col">Max In Batch %</th>

                <th scope="col">Edit</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var ferm in Model)
            {
                <tr>
                    <td>@ferm.Name</td>
                    <td>@ferm.Type</td>
                    <td>@ferm.Origin</td>
                    <td>@ferm.Color</td>
                    <td>@ferm.PotentialGravity</td>
                    <td>@ferm.MaxInBatch</td>
                    <td>
                        <a asp-controller="Ingredient" asp-action="EditFermentable" asp-route-Id="@ferm.Id">Edit</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<div class="container mt-3 text-center">
    <a class="btn btn-success p-2" asp-controller="Ingredient" asp-action="AddFermentable">Add Fermentables</a>
</div>