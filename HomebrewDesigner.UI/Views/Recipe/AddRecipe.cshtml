@using System.Text.RegularExpressions
@using System.Formats.Asn1
@using HomebrewDesigner.Core.DTO
@using HomebrewDesigner.Core.Enums
@model HomebrewDesigner.ViewModels.RecipeVM


<div class="container-fluid mt-5 text-center">
    <h1 class="display-3 text-decoration-underline">Recipe Details</h1>
    <form asp-action="AddRecipe" asp-controller="Recipe" method="post">
        <div class="container d-flex justify-content-between">
            <div class="container border border-2 p-2 rounded-2 m-2">
                <h1 class="display-6">Name:</h1>
                <input asp-for="Recipe.Name" class="form-control"/>
                <span asp-validation-for="Recipe.Name"></span>
            </div>
            <div class="container border border-2 p-2 rounded-2 m-2">
                <h1 class="display-6">Style:</h1>
                <select class="form-select" asp-for="Recipe.Style">
                    <option selected disabled>Style</option>
                    @foreach (var item in Enum.GetNames(typeof(StyleEnum)))
                    {
                        <option value="@item">@Regex.Replace(item, "([a-z])([A-Z])", "$1 $2")</option>
                    }
                </select>
                <span asp-validation-for="Recipe.Style"></span>
            </div>
        </div>
        <div class="container border border-2 p-2 rounded-2 m-2">
            <h1 class="display-6">Yeast:</h1>
            <label asp-for="YeastId">Yeast</label>
            <select class="form-select mt-2" asp-for="YeastId">
                <option selected disabled>Yeast</option>
                @foreach (YeastResponse yeast in Model.YeastList)
                {
                    <option value="@yeast.Id">@yeast.Name</option>
                }
            </select>
            <span asp-validation-for="YeastId"></span>
            <label class="form-label mt-2" asp-for="Recipe.YeastAmount"></label>
            <input asp-for="Recipe.YeastAmount" class="form-control" placeholder="Yeast Amount (ml)"/>
            <span asp-validation-for="Recipe.YeastAmount"></span>
            <label class="form-label mt-2" asp-for="Recipe.YeastViability"></label>
            <input asp-for="Recipe.YeastViability" class="form-control" placeholder="Yeast Viability (%)"/>
            <span asp-validation-for="Recipe.YeastViability"></span>
        </div>
        <div class="container border border-2 p-2 rounded-2 m-2">
            <h1 class="display-6">Mash:</h1>
            <label class="form-label mt-2" asp-for="Recipe.MashTemp"></label>
            <input asp-for="Recipe.MashTemp" class="form-control" placeholder="Mash Temp (f)"/>
            <span asp-validation-for="Recipe.MashTemp"></span>
            <label class="form-label mt-2" asp-for="Recipe.WaterRatio"></label>
            <input asp-for="Recipe.WaterRatio" class="form-control" placeholder="Water Ratio (*:1)"/>
            <span asp-validation-for="Recipe.WaterRatio"></span>
        </div>
        
        <button class="btn btn-success mt-3" type="submit">Submit Recipe</button>
    </form>
    
</div>