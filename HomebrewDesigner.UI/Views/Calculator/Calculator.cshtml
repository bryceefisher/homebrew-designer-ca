@model HomebrewDesigner.ViewModels.CalculatorVM
@{
    ViewBag.Title = "ABV Calculator";
}

<div class="container-fluid mt-5 text-center">
    <h1 class="display-3 text-decoration-none text-main">ABV Calculator</h1>
    <div class="container rounded-5 p-3 pt-5 bg-secondary">
        <form asp-action="Calculator" asp-controller="Calculator" method="post">
            <div class="mb-3 d-flex">
                <div class="col-3">
                    <label asp-for="OG" class="form-label">
                        <h5 class="text-main">Original Gravity:</h5>
                    </label>
                </div>
                <div class="col-9">
                    <input asp-for="OG" class="form-control bg-secondary text-main"/>
                    <span class="text-green" asp-validation-for="OG"></span>
                </div>
            </div>
            <div class="mb-3 d-flex">
                <div class="col-3">
                    <label asp-for="FG" class="form-label">
                        <h5 class="text-main">Final Gravity:</h5>
                    </label>
                </div>
                <div class="col-9">
                    <input asp-for="FG" class="form-control bg-secondary text-main"/>
                    <span class="text-green" asp-validation-for="FG"></span>
                </div>
            </div>
            <div class="mb-3 d-flex">
                <div class="col-3">
                    <label asp-for="ABV" class="form-label">
                        <h5 class="text-main">ABV:</h5>
                    </label>
                </div>
                <div class="col-9">
                    <input asp-for="ABV" disabled class="form-control bg-secondary text-main"/>
                    <span class="text-green" asp-validation-for="ABV"></span>
                </div>
            </div>

            <button class="btn btn-main text-green mt-3" type="submit">Calculate ABV</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}